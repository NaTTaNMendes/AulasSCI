unit poo;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls;

type
  TEmpresa = class
    private
      wCodigo : Integer;
      wCNPJ : String;
      wDono : String;
      wEndereco : String;
      wReceitaDiaria : Currency;
  end;

type
  TRestaurante = class(TEmpresa)
    private
      wNome : String;
      wQuantidadeFuncionario : Integer;
      wPrincipalPrato : String;
  end;

type
  TfrCadastro = class(TForm)
    lbCodigo: TLabel;
    edCodigo: TEdit;
    lbNome: TLabel;
    edNome: TEdit;
    lbCNPJ: TLabel;
    edCNPJ: TEdit;
    lbDono: TLabel;
    edDono: TEdit;
    lbEndereco: TLabel;
    edEndereco: TEdit;
    lbReceita: TLabel;
    edReceita: TEdit;
    btCadastrar: TButton;
    procedure FormShow(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;


var
  frCadastro: TfrCadastro;

implementation

{$R *.dfm}

procedure TfrCadastro.FormShow(Sender: TObject);
var
  wRestaurante : TRestaurante;
  wEmpresa : TEmpresa;
begin
  // Cadastrando Burguer King
  wRestaurante := TRestaurante.Create;
  wRestaurante.wNome := 'Burguer King';
  wRestaurante.wQuantidadeFuncionario := 15000;
  wRestaurante.wPrincipalPrato := 'Whopper';
  wRestaurante.wCodigo := 12;
  wRestaurante.wCNPJ := '13.574.594/0001-96';
  wRestaurante.wDono := 'Jose E. Cil';
  wRestaurante.wEndereco := 'Miami, Flórida - EUA';
  wRestaurante.wReceitaDiaria := 10133333.33;

  // Cadastrando empresa aleatória
  wEmpresa := TEmpresa.Create;
  wEmpresa.wCodigo := 1;
  wEmpresa.wCNPJ := '73.790.869/0001-50';
  wEmpresa.wDono := 'Carlos Andrade';
  wEmpresa.wEndereco := 'Rua dos Silveiras, 488 - Vila Formosa, São Paulo, SP';
  wEmpresa.wReceitaDiaria := 1200;
end;

end.
